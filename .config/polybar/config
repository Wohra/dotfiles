; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
interval = 1

; Available tags:
;   <output> - deprecated
;   <label> (default)
format =  <label>
;format-background = #999
;format-foreground = #000
format-padding = 4

; Available tokens:
;   %output%
; Default: %output%
